# LedgerKit Environment Variables

# Application
NODE_ENV=development
API_PORT=3000
LOG_LEVEL=debug
JWT_SECRET=your-secret-key-here

# Database (when running locally with Docker databases)
DB_HOST=localhost
DB_PORT=5434
DB_NAME=ledgerkit_dev
DB_USER=ledgerkit
DB_PASSWORD=ledgerkit_password
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Paths
RULES_PATH=./examples/rules.yaml
UPLOADS_PATH=./uploads

# Optional: External APIs (for future use)
# BANK_API_KEY=
# BANK_API_URL=