{
  "name": "ledgerkit",
  "version": "0.1.0",
  "description": "Open-source transaction-to-ledger system with double-entry accounting",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Prageeth Dassanayake",
  "license": "Apache-2.0",
  "keywords": [
    "accounting",
    "ledger",
    "double-entry",
    "transactions",
    "fintech"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/prageeth/ledgerkit.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:seed": "tsx scripts/seed.ts",
    "db:reset": "tsx scripts/reset.ts",
    "docker:build": "docker build -t ledgerkit .",
    "docker:up": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "docker:up:full": "docker-compose up -d",
    "docker:up:test": "docker-compose -f docker-compose.dev.yml --profile test up -d",
    "docker:up:tools": "docker-compose -f docker-compose.dev.yml --profile tools up -d"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "chalk": "^5.2.0",
    "commander": "^11.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csv-parser": "^3.2.0",
    "csv-stringify": "^6.4.0",
    "dotenv": "^16.1.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "inquirer": "^9.2.0",
    "joi": "^17.9.0",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0",
    "ora": "^6.3.0",
    "pg": "^8.11.0",
    "pg-pool": "^3.6.0",
    "winston": "^3.9.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/inquirer": "^9.0.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.0",
    "@types/pg": "^8.10.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.0",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.0",
    "ts-jest": "^29.1.0",
    "tsx": "^3.12.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.ts",
      "**/tests/**/*.spec.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
